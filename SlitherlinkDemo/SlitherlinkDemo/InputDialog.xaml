<Window x:Class="SlitherlinkDemo.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlitherlinkDemo" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Topmost="True"
        Title="InputDialog" Height="400" Width="300" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TBInput" Margin="10" FontFamily="宋体" FontSize="20" AcceptsReturn="True"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="10" Content="确认" Click="Button_Click_1"/>
            <Button Grid.Column="1" Margin="10" Content="取消" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
